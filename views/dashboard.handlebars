<div class="container-fluid">
    <div class="row">
        <div class="col-3 form">
            <form class="new-wine-form">
                <h3>Add New Wine:</h3>
                <div class="pt-1">
                    <label for="wine-name">Wine Name:</label>
                    <input type="text" id="wine-name" />
                </div>
                <div class="pt-3">
                    <label for="type-select">Type of Wine:</label>
                    <select name="types" id="type-select">
                        <option value="">--Please choose an option--</option>
                        <option value="red">Red</option>
                        <option value="white">White</option>
                        <option value="rose">Rose</option>
                        <option value="sparkling">Sparkling</option>
                    </select>
                </div>
                <div class="pt-3">
                    <label for="vintage">Vintage:</label>
                    <input type="text" id="vintage" />
                </div>
                <div class="pt-3">
                    <label for="source">Source:</label>
                    <input type="text" id="source" />
                </div>
                <div class="pt-3">
                    <label for="quantity">Quantity:</label>
                    <input type="text" id="quantity" />
                </div>
                <div class="pt-3">
                    <label for="myimage">Upload Image:</label>
                    <input type="file" id="myimage" name="myimage">
                </div>
                <br>
                <div class="pt-1">
                    <button type="submit">Add Wine</button>
                </div>
            </form>
        </div>
        <div class="col-9 flex-wrap wine-cards row row-cols-2">
            {{#if posts.length}}
            {{#each posts as |post|}}
                <div class="col d-flex justify-content-center">
                <div class="col card mb-4 p-2">
                    <div class="image">
                        <img src={{img_url}} class="card-img-top" alt="picture of" + {{wine_name}}>
                    </div>
                    <div class="wine-name p-3">
                        <h4 class="card-title">{{wine_name}}</h4>
                    </div>
                    <div class="card-body d-flex">
                        <div class="flex-wrap">
                            <div class="wine-type">
                                <p class="card-text">{{wine_type}}</p><span class={{wine_type}} + "-icon"></span>
                            </div>
                            <p class="card-text">{{wine_vintage}}</p>
                            <p class="card-text">{{wine_source}}</p>
                            <p class="card-text">{{wine_quantity}}</p>
                        </div>
                    </div>
                </div>
                </div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>

<script src="/javascript/add-post.js"></script>