<div class="container p-4 mt-2">
  <div class="row">
    <div class="col col-12 d-flex flex-column align-items-center mt-4">
      <h4 class="title">Welcome!</h4>
      <div class="card text-center">
        <div class="card-body" data-aos="zoom-in-left">
          <form class="login-form d-flex flex-column align-items-center">
            <div class="data">
              <label for="username-login">username:</label>
              <input type="text" id="username-login" />
            </div>
            <div class="data pb-2">
              <label for="password-login">password:</label>
              <input type="password" id="password-login" />
            </div>
            <div>
              <button type="submit">login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col col-12 d-flex flex-column align-items-center mt-4">
      <div class="card text-center">
        <div class="card-body" data-aos="zoom-in-left">
          <form class="signup-form">
            <div class="data">
              <label for="username-signup">username:</label>
              <input type="text" id="username-signup" />
            </div>
            <div class="data">
              <label for="email-signup">email:</label>
              <input type="text" id="email-signup" />
            </div>
            <div class="data">
              <label for="password-signup">password:</label>
              <input type="password" id="password-signup" />
            </div>
            <div>
              <button type="submit">signup</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascript/login.js"></script>